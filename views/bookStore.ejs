<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        h1,
        h2 {
            text-align: center;
            color: #333;
        }

        /* Form Styling */
        form {
            max-width: 500px;
            background: #fff;
            padding: 20px;
            margin: 20px auto;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        form label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        form input {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        form button {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 15px;
            border: none;
            background-color: #28a745;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #218838;
        }

        /* Table Styling */
        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th,
        td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Image Styling */
        img {
            width: 80px;
            height: auto;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        /* Button Links */
        .action-buttons a {
            text-decoration: none;
            padding: 6px 12px;
            margin: 5px;
            border-radius: 5px;
            font-size: 14px;
            display: inline-block;
        }

        .delete-btn {
            background: red;
            color: white;
        }

        .edit-btn {
            background: #007bff;
            color: white;
        }

        .delete-btn:hover {
            background: darkred;
        }

        .edit-btn:hover {
            background: #0056b3;
        }
    </style>
</head>

<body>

    <div style="display: flex;">
        <div style="width: 25%;">
            <h1>Add Book</h1>
            <form action="/bookData" method="post" style="width: 100%;" enctype="multipart/form-data">
                <label>Image:</label>
                <input type="file" name="image" placeholder="Book Image" multiplex>

                <label>Title:</label>
                <input type="text" name="title" placeholder="Book Title">

                <label>Author:</label>
                <input type="text" name="author" placeholder="Book Author">

                <label>Price:</label>
                <input type="number" name="price" placeholder="Book Price">

                <label>Category:</label>
                <input type="text" name="category" placeholder="Book Category">

                <label>Published Year:</label>
                <input type="text" name="publishedYear" placeholder="Book Published Year">

                <button type="submit">Add Book</button>
            </form>

        </div>
        <div style="width: 75%;">
            <h2>Book List</h2>
            <table border="1">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published Year</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach((book)=> { %>
                        <tr>
                            <td>
                                <img src="<%= book.image %>" alt="Book Image">
                            </td>
                            <td>
                                <%= book.title %>
                            </td>
                            <td>
                                <%= book.author %>
                            </td>
                            <td>$<%= book.price %>
                            </td>
                            <td>
                                <%= book.category %>
                            </td>
                            <td>
                                <%= book.publishYear %>
                            </td>
                            <td class="action-buttons">
                                <a href="/delete/?id=<%= book._id %>" class="delete-btn">Delete</a>
                                <a href="/edit/?id=<%= book._id %>" class="edit-btn">Edit</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>

</html>